<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Form View -->
        <record id="bo_phan_nhan_su_view_form" model="ir.ui.view">
            <field name="name">bo_phan_nhan_su.view.form</field>
            <field name="model">bo_phan_nhan_su</field>
            <field name="arch" type="xml">
                <form string="Bộ phận nhân sự">
                    <sheet>
                        <group col="2" string="Thông tin chung">
                            <field name="ma_bo_phan" />
                            <field name="ten_bo_phan" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree view -->
        <record id="bo_phan_nhan_su_view_tree" model="ir.ui.view">
            <field name="name">bo_phan_nhan_su.view.tree</field>
            <field name="model">bo_phan_nhan_su</field>
            <field name="arch" type="xml">
                <tree string="Danh sách bộ phận nhân sự">
                    <field name="ma_bo_phan" />
                    <field name="ten_bo_phan" />
                </tree>
            </field>
        </record>
        <!-- Search View -->
        <record id="bo_phan_nhan_su_view_search" model="ir.ui.view">
            <field name="name">bo_phan_nhan_su.view.search</field>
            <field name="model">bo_phan_nhan_su</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm bộ phận NS">
                    <field name="ma_bo_phan" />
                    <field name="ten_bo_phan" />
                </search>
            </field>
        </record>
        <!-- Action -->
		<record id="bo_phan_nhan_su_action" model="ir.actions.act_window">
			<field name="name">Bộ phận nhân sự</field>
			<field name="res_model">bo_phan_nhan_su</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>
