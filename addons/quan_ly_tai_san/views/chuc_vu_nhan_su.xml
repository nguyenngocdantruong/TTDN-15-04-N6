<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Form View -->
        <record id="chuc_vu_nhan_su_view_form" model="ir.ui.view">
            <field name="name">chuc_vu_nhan_su.view.form</field>
            <field name="model">chuc_vu_nhan_su</field>
            <field name="arch" type="xml">
                <form string="Chức vụ nhân sự">
                    <sheet>
                        <group col="2" string="Thông tin chung">
                            <field name="ma_chuc_vu" />
                            <field name="ten_chuc_vu" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree view -->
        <record id="chuc_vu_nhan_su_view_tree" model="ir.ui.view">
            <field name="name">chuc_vu_nhan_su.view.tree</field>
            <field name="model">chuc_vu_nhan_su</field>
            <field name="arch" type="xml">
                <tree string="Danh sách Chức vụ nhân sự">
                    <field name="ma_chuc_vu" />
                    <field name="ten_chuc_vu" />
                </tree>
            </field>
        </record>
        <!-- Search View -->
        <record id="chuc_vu_nhan_su_view_search" model="ir.ui.view">
            <field name="name">chuc_vu_nhan_su.view.search</field>
            <field name="model">chuc_vu_nhan_su</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm Chức vụ NS">
                    <field name="ma_chuc_vu" />
                    <field name="ten_chuc_vu" />
                </search>
            </field>
        </record>
        <!-- Action -->
		<record id="chuc_vu_nhan_su_action" model="ir.actions.act_window">
			<field name="name">Chức vụ nhân sự</field>
			<field name="res_model">chuc_vu_nhan_su</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>
